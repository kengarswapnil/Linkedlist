class Linkedlist{
    
    public static class Node{
        int data;
        Node next;
        
        Node(int data){
            this.data = data;
            this.next = null;
        }
    }
    
    public static Node head;
    public static Node tail;
    
    public static void addFirst(int data){
        Node newnode = new Node(data);
        if(head == null){
            head = tail =newnode;
        }else{
            tail.next = newnode;
            tail = newnode;
        }
    }
    
    public static void display(){
        Node temp = head;
        while(temp != null){
            System.out.print(temp.data + "->");
            temp = temp.next;
        }
        System.out.println("null");
    }
    
    public static void reverse(){
        Node prev = null;
        Node curr = tail = head;
        Node next;
        
        while(curr != null){
            next  = curr.next;
            curr.next = prev;
            prev = curr;
            curr = next;
        }
        head = prev;
        
    }
    
    
    public static void main(String[] args) {
       Linkedlist ll = new Linkedlist();
       ll.addFirst(1);
       ll.addFirst(2);
       ll.addFirst(3);
       ll.display();
       
       ll.reverse();
       ll.display();
    }
}
